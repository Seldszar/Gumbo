{
  "manifest_version": 3,
  "name": "Gumbo: Twitch Companion",
  "short_name": "Gumbo",
  "version": "0.0.0",
  "description": "Swollen companion keeping you updated on your Twitch experience",
  "permissions": [
    "alarms",
    "background",
    "notifications",
    "storage",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "action": {
    "default_title": "Gumbo: Twitch Companion",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png"
    }
  }
}
